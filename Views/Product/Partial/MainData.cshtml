@model AddProductViewMoldes


<form asp-action="Create" method="post" enctype="multipart/form-data">


    @Html.AntiForgeryToken()


    <div class=" border p-3 mt-4">


        <div class=" row p-2 ">
            <h2 class=" text-primary">
                Add New Item
            </h2>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class=" mb-3 ">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class=" mb-3 ">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class=" mb-3 ">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Gategories">
                    <option value="">-- Select Course Level --</option>
                </select>
            </div>
            <div class=" mb-3 ">
                <label asp-for="Files"></label>
                <input asp-for="Files" type="file" class="form-control" multiple />
                <span asp-validation-for="Files" class="text-danger"></span>
            </div>
        
            <br />
            <hr />
            <div class=" mb-3 ">
                <button type="submit" id="submit" class="btn btn-success" style="border-radius: 10px; width:250px;">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add New Item
                </button>

                <a asp-action="Index" asp-controller="Product" class=" btn btn-primary" style="border-radius: 10px; width:250px;">
                    <i class="bi bi-skip-backward-circle-fill"></i>&nbsp; Back To Item
                </a>
            </div>


        </div>
    </div>

</form>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
