<style>
    .megasubmenu {
        padding: 1rem;
        display: none; /* Hide mega submenu by default */
        position: absolute;
        top: 0;
        left: 100%;
        min-height: 100%;
        min-width: 500px;
        z-index: 1000;
        background-color: #fff;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    /* Dropdown hover adjustment */
    .dropdown:hover > .dropdown-menu {
        display: block !important; /* Show dropdown menu on hover */
    }

    .has-megasubmenu:hover > .megasubmenu {
        display: block !important; /* Show megasubmenu on hover */
    }

    /* For the overlay effect */
    @@media all and (min-width: 991px) {
        .dropdown:after {
            content: '';
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            transition: opacity .15s ease-in-out;
            opacity: 0;
            visibility: hidden;
            background-color: rgba(0, 0, 0, .5);
            pointer-events: none;
        }

        .dropdown:hover .nav-link {
            position: relative;
            z-index: 12;
        }

        .dropdown:hover:after {
            z-index: 10;
            opacity: 1;
            visibility: visible;
            position: fixed;
        }
    }
</style>



